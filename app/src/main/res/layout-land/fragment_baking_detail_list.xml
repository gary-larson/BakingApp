<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/baking_ingredient_margin">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tv_ingredients"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin"
        android:background="@drawable/baking_recipe_list_item_background"
        android:padding="@dimen/baking_ingredient_padding"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/baking_detail_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/vertical_half" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail_list"
        android:name="mobi.thalic.bakingapp.BakingDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/baking_ingredient_margin"
        android:layout_marginTop="@dimen/baking_ingredient_margin"
        android:layout_marginRight="@dimen/baking_ingredient_margin"
        android:layout_marginBottom="@dimen/baking_ingredient_margin"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintLeft_toRightOf="@id/vertical_half"
        app:layout_constraintRight_toRightOf="parent"
        tools:context="mobi.thalic.bakingapp.BakingDetailFragment"
        tools:listitem="@layout/fragment_step_description_list_item" />
</androidx.constraintlayout.widget.ConstraintLayout>