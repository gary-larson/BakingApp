<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/baking_recipe_list_item_horizontal_margin"
    android:layout_marginTop="@dimen/baking_recipe_list_item_vertical_margin"
    android:layout_marginRight="@dimen/baking_recipe_list_item_horizontal_margin"
    android:layout_marginBottom="@dimen/baking_recipe_list_item_vertical_margin"
    android:background="@drawable/baking_recipe_list_item_selector"
    android:padding="@dimen/baking_recipe_list_item_padding">

    <ImageView
        android:id="@+id/iv_recipe_image"
        android:layout_width="@dimen/baking_recipe_image_size"
        android:layout_height="@dimen/baking_recipe_image_size"
        android:contentDescription="@string/recipe_image_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/baking_recipe_text_size"
        app:layout_constraintLeft_toRightOf="@id/iv_recipe_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recipe_servings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/baking_recipe_text_size"
        app:layout_constraintLeft_toLeftOf="@id/tv_recipe_name"
        app:layout_constraintTop_toBottomOf="@id/tv_recipe_name" />

</androidx.constraintlayout.widget.ConstraintLayout>