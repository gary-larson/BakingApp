<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobi.thalic.bakingapp.BakingStepDetailFragment">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/playerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/baking_step_detail_margin"
        android:layout_marginLeft="@dimen/baking_step_detail_margin"
        android:layout_marginRight="@dimen/baking_step_detail_margin"
        android:layout_marginTop="@dimen/baking_step_detail_margin"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_top_third"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_no_video_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/baking_step_detail_margin"
        android:layout_marginLeft="@dimen/baking_step_detail_margin"
        android:layout_marginRight="@dimen/baking_step_detail_margin"
        android:layout_marginTop="@dimen/baking_step_detail_margin"
        android:text="@string/baking_step_no_video_message"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:gravity="center"
        android:background="@drawable/baking_recipe_list_item_background"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_top_third"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_top_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="256dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/baking_step_detail_margin"
        android:layout_marginLeft="@dimen/baking_step_detail_margin"
        android:layout_marginRight="@dimen/baking_step_detail_margin"
        android:layout_marginTop="@dimen/baking_step_detail_margin"
        android:background="@drawable/baking_recipe_list_item_background"
        app:layout_constraintTop_toBottomOf="@id/horizontal_top_third"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontal_bottom_sixth">

        <TextView
            android:id="@+id/tv_step_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/baking_step_detail_margin"
            android:layout_marginLeft="@dimen/baking_step_detail_margin"
            android:layout_marginRight="@dimen/baking_step_detail_margin"
            android:layout_marginTop="@dimen/baking_step_detail_margin"
            android:paddingBottom="@dimen/baking_step_text_size"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textSize="@dimen/baking_step_text_size"/>

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_bottom_sixth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="256dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/baking_step_detail_margin"
        android:layout_marginLeft="@dimen/baking_step_detail_margin"
        android:layout_marginRight="@dimen/baking_step_detail_margin"
        android:layout_marginTop="@dimen/baking_step_detail_margin"
        android:background="@drawable/baking_recipe_list_item_background"
        app:layout_constraintTop_toBottomOf="@id/horizontal_bottom_sixth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/b_previous_step"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/baking_step_previous_step" />

        <Button
            android:id="@+id/b_next_step"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/baking_step_next_step" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>